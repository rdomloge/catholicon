<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<filter>
		<filter-name>ThreadLocalLoader</filter-name>
		<filter-class>catholicon.filter.ThreadLocalLoaderFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>ThreadLocalLoader</filter-name>
		<url-pattern>/season/*</url-pattern>
		<url-pattern>/secure/*</url-pattern>
		<url-pattern>/frontpage/upcoming</url-pattern>
		<url-pattern>/matchcard/*</url-pattern>
		<url-pattern>/fixture/*</url-pattern>
	</filter-mapping>
	
 	<filter>
		<filter-name>LongCachingFilter</filter-name>
		<filter-class>catholicon.filter.RegexMatchingCachingFilter</filter-class>
		<init-param>
			<param-name>patterns</param-name>
			<param-value>
				\/catholicon\/season\/list,
				\/catholicon\/season\/\d+\/league\/list,
				\/catholicon\/season\/\d+\/league\/\d+\/divisions,
				\/catholicon\/matchcard/\d+
			</param-value>
		</init-param>
		<init-param>
			<param-name>suppressStackTrace</param-name>
		 	<param-value>false</param-value>
		</init-param>
		<init-param>
 			<param-name>cacheName</param-name>
 			<param-value>MonthCache</param-value>
		</init-param>
 	</filter>
 	
 	<filter>
		<filter-name>MediumCachingFilter</filter-name>
		<filter-class>catholicon.filter.RegexMatchingCachingFilter</filter-class>
		<init-param>
			<param-name>patterns</param-name>
			<param-value>
				\/catholicon\/frontpage\/upcoming,
				\/catholicon\/season/\d+\/league\/\d+\/division\/\d+,
				\/catholicon\/season/\d+\/matches\/\d+\/list,
				\/catholicon\/fixture\/\d+
			</param-value>
		</init-param>
		<init-param>
			<param-name>suppressStackTrace</param-name>
		 	<param-value>false</param-value>
		</init-param>
		<init-param>
 			<param-name>cacheName</param-name>
 			<param-value>HourCache</param-value>
		</init-param>
 	</filter>
 	
 	<filter-mapping>
		<filter-name>LongCachingFilter</filter-name>
		<url-pattern>*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>FORWARD</dispatcher>
 	</filter-mapping>
 	
 	<filter-mapping>
		<filter-name>MediumCachingFilter</filter-name>
		<url-pattern>*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>FORWARD</dispatcher>
 	</filter-mapping>
</web-app>
