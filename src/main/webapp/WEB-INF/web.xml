<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<filter>
		<filter-name>ThreadLocalLoader</filter-name>
		<filter-class>catholicon.filter.ThreadLocalLoaderFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>ThreadLocalLoader</filter-name>
		<url-pattern>/season/*</url-pattern>
		<url-pattern>/secure/*</url-pattern>
		<url-pattern>/frontpage/upcoming</url-pattern>
		<url-pattern>/matchcard/*</url-pattern>
		<url-pattern>/fixture/*</url-pattern>
	</filter-mapping>

</web-app>
